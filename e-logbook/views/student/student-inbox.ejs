<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Student inbox</title>
  <link rel="stylesheet" type="text/css" href="../css/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="../css/font/css/all.min.css">
  <!-- <script src="js/main.js" defer></script> -->
  <style>
    a {
      text-decoration: none;
    }
  </style>
</head>

<body>
  <div class="bg-primary text-white p-3 d-flex justify-content-between">
    <div class="brand-name d-flex">
      <img src="../images/state.jpeg" width="30" height="30" style="border-radius: 100%;" alt="Logo">
      <h4 class="mx-2">E-Logbook</h4>
    </div>
    <div class="button-group">
      <button class="home btn btn-light"><a href="/student-dashboard/<%= student._id %>">Home</a> <i
          class="fas fa-home"></i></button>
      <button class="logbook btn btn-light"><a href="/fill-logbook/<%= student._id %>">Fill logbook</a> <i
          class="fas fa-book"></i></button>
    </div>
  </div>
  <div class="w-50 container my-2">
    <h3>Inbox(<%= messages.length %>)</h3>
    <hr class="hr">
  </div>
  <% if(!messages.length){%>
    <div class="alert w-50 alert-warning container">
      <h4>No messages</h4>
    </div>
    <%}%>
      <% messages.forEach(message=> {%>
        <div class="w-50 container">
          <div class=" mt-3 d-flex align-items-center border">
            <div>
              <img width="80" style="object-fit: cover;" height="80" src="../../images/default.png"
                alt="<%= message.supervisor.fullname %>">
            </div>
            <div class="mx-2">
              <div>
                <p><b><a href="/get/student-inbox/<%= message._id %>">
                      <%= message.supervisor.fullname %>
                    </a></b></p>
              </div>
              <div>
                <p>
                  <%= message.title %>
                </p>
              </div>
            </div>
          </div>
        </div>
        <%})%>
</body>

</html>