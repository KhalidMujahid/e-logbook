<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Send Message | Supervisor Dashboard</title>
  <link rel="stylesheet" type="text/css" href="../../css/bootstrap/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="../../css/font/css/all.min.css">
  <style>
    a {
      text-decoration: none;
    }
  </style>
</head>

<body>
  <div class="bg-primary align-items-center text-white p-3 d-flex justify-content-between">
    <div class="brand-name d-flex">
      <img src="../../images/state.jpeg" width="30" height="30" style="border-radius: 100%;" alt="Logo">
      <h4>Supervisor Dashboard</h4>
    </div>
    <div class="button-group">
      <button class="btn btn-light"><a href="/supervisor-dashboard/<%= supers._id %>">Home <i
            class="fas fa-home"></i></a></button>
      <button class="btn btn-light"><a href="/supervisor/inbox/<%= supers._id %>">Inbox <i
            class="fas fa-inbox"></i></a></button>
    </div>
  </div>
  <% if(error){%>
    <div class="alert alert-danger container my-3 p-4">
      <p>
        <%= error %>
      </p>
    </div>
    <%}%>
      <div class="container border my-3 p-5">
        <div class="my-3">
          <h4>Send message</h4>
        </div>
        <div>
          <form action="/sup_message" method="post">
            <div class="form-group">
              <legend>From:</legend>
              <input name="supervisor_id" value="<%= supers.userid %>" class="form-control" readonly />
            </div>
            <div class="form-group mt-3">
              <legend>To:</legend>
              <select class="form-select" name="student_id">
                <option>-------Select-------</option>
                <% students.forEach(student=> {%>
                  <option value="<%= student._id %>">
                    <%= student.fullname %>
                  </option>
                  <%})%>
              </select>
            </div>
            <div class="form-group">
              <legend>Title:</legend>
              <input placeholder="Title" name="title" class="form-control" />
            </div>
            <div class="form-group mt-3">
              <legend>Message:</legend>
              <textarea class="form-control" name="message"></textarea>
            </div>
            <div class="button-group mt-3">
              <button class="btn btn-success">Send message <i class="fas fa-paper-plane"></i></button>
            </div>
          </form>
        </div>
</body>

</html>